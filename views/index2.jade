extends layout

block content
 nav.navbar.navbar-custom.navbar-fixed-top(role='navigation')
    .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-main-collapse')
            i.fa.fa-bars
          a.navbar-brand.page-scroll(href='#page-top')
            i.fa.fa-play-circle
            span.light TellUsWho
            | 2
        .collapse.navbar-collapse.navbar-right.navbar-main-collapse
          ul.nav.navbar-nav
            li.hidden
              a(href='#page-top')
            li
              a.page-scroll(href='#about') About
            li
              a.page-scroll(href='#survey') Survey
            li
              a.page-scroll(href='#', data-toggle='modal', data-target='#login-modal') Log in  |  Sign Up
 #login-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header.login_modal_header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
            h2#myModalLabel.modal-title Login to Your Account
          .modal-body.login-modal
            br
            .clearfix
            #social-icons-conatainer
                  a.btn.btn-default.google(href='/auth/google')
                    i.fa.fa-google-plus.modal-icons
                    | Sign In with Google
            .clearfix
            .form-group.modal-register-btn
              button.btn.btn-default  New User Please Register
          .clearfix
          .modal-footer.login_modal_footer
 header.intro
      .intro-body
        .container
          .row
            .col-md-8.col-md-offset-2
              h1.brand-heading TellUsWho2
              p.intro-text
                | Research to understand how people make social connections.
                br
                | Start the survey now!
              a.btn.btn-circle.page-scroll(href='#about')
                i.fa.fa-angle-double-down.animated
 section#about.container.content-section.text-center
      .row
