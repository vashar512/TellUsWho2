            li
              a.btn.btn-default.btn-lg(href='/auth/yahoo')
                i.fa.fa-yahoo.fa-fw
                span.network-name Yahoo
            li
              a.btn.btn-default.btn-lg(href='/auth/linkedin')
                i.fa.fa-linkedin.fa-fw
